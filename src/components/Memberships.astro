---
const memberships = [
    {
        name: "Student Membership",
        price: "$5",
        description:
            "Support our mission with this entry-level membership perfect for students and young supporters.",
        link: "https://donate.stripe.com/cN23dL37v2fg9ZScMQ"
    },
    {
        name: "Partner in Education",
        price: "$50",
        description:
            "Join as a Partner in Education and help us make a meaningful impact on local students.",
        link: "https://donate.stripe.com/9AQ7u1cI5dXYb3WfZ4"
    },
    {
        name: "Merit Roll",
        price: "$75",
        description:
            "Recognition-level membership supporting academic excellence and student achievement.",
        link: "https://donate.stripe.com/9AQbKh5fD9HIdc43cj"
    },
    {
        name: "Honor Roll",
        price: "$100",
        description:
            "Premium membership demonstrating your commitment to educational excellence.",
        link: "https://donate.stripe.com/dR6cOl6jHcTU9ZS7sA"
    },
    {
        name: "Salutatorian",
        price: "$200",
        description:
            "Our highest individual membership tier, making the greatest impact on student success.",
        link: "https://buy.stripe.com/3cIfZh3tI2ms5upbH60kE0c"
    },
];
---

<section id="memberships" class="py-12 md:py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6">
        <h2
            class="text-center text-3xl md:text-4xl font-semibold mb-4 text-primary-600"
        >
            Become a Member for the 2025-26 School Year
        </h2>
        <p class="text-center text-lg text-gray-600 mb-12 max-w-2xl mx-auto">
            Join the Green Schools Foundation! Choose your level of support:
        </p>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6 mt-8"
        >
            {
                memberships.map((membership) => (
                    <div class="bg-white rounded-2xl p-8 shadow-custom text-center transition-all duration-200 border border-gray-200 relative overflow-hidden hover:-translate-y-1 hover:shadow-custom-lg">
                        <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-500 to-accent-500" />

                        <div class="mb-6">
                            <h3 class="text-xl font-semibold mb-2 text-gray-900">
                                {membership.name}
                            </h3>
                            <div class="text-4xl font-bold text-primary-600 mb-4">
                                {membership.price}
                            </div>
                        </div>

                        <p class="text-gray-600 mb-8 leading-relaxed min-h-[4.5rem]">
                            {membership.description}
                        </p>

                        <a href={membership.link} target="_blank" rel="noopener noreferrer" class="bg-primary-600 text-white border-0 px-8 py-3 rounded-lg font-medium cursor-pointer transition-all duration-200 w-full hover:bg-primary-700 hover:-translate-y-0.5 inline-block text-center">
                            Choose This Level
                        </a>
                    </div>
                ))
            }
        </div>
    </div>
</section>
