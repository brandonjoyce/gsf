<section id="donate" class="donate">
    <div class="container">
        <div class="donate-content">
            <h2>Donate to the Green Schools Foundation</h2>
            <p>Support the Green Schools Foundation's mission for Green students and staff.</p>
            <div class="donate-actions">
                <button class="btn btn-donate-primary">Make a Donation</button>
                <p class="donate-note">Your contribution directly impacts student success and educational opportunities.</p>
            </div>
        </div>
    </div>
</section>

<style>
    .donate {
        padding: 4rem 0;
        background-color: var(--background-white);
    }

    .donate-content {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .donate h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--primary-green);
    }

    .donate p {
        font-size: 1.125rem;
        color: var(--text-gray);
        margin-bottom: 2rem;
    }

    .donate-actions {
        margin-top: 2rem;
    }

    .btn-donate-primary {
        background-color: var(--accent-green);
        color: var(--text-light);
        border: none;
        padding: 1rem 3rem;
        border-radius: 0.5rem;
        font-size: 1.125rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        margin-bottom: 1rem;
    }

    .btn-donate-primary:hover {
        background-color: var(--secondary-green);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .donate-note {
        font-size: 0.9rem;
        color: var(--text-gray);
        font-style: italic;
        margin-top: 1rem;
    }

    @media (max-width: 768px) {
        .donate {
            padding: 3rem 0;
        }

        .donate h2 {
            font-size: 2rem;
        }

        .btn-donate-primary {
            width: 100%;
            max-width: 300px;
        }
    }
</style>
