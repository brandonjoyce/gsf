<section id="donate" class="py-12 md:py-16 bg-white">
    <div class="max-w-6xl mx-auto px-6">
        <div class="text-center max-w-2xl mx-auto">
            <h2
                class="text-3xl md:text-4xl font-semibold mb-4 text-primary-600"
            >
                Donate to the Green Schools Foundation
            </h2>
            <p class="text-lg text-gray-600 mb-8">
                Support the Green Schools Foundation's mission for Green
                students and staff.
            </p>
            <div class="mt-8">
                <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank" class="inline-block">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="K26C2VAXBAFVC">
                    <input type="hidden" name="currency_code" value="USD">

                    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                        <select name="os0" class="px-4 py-3 rounded-lg border border-gray-300 text-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-base">
                            <option value="Valedictorian">Valedictorian - $500</option>
                            <option value="Salutatorian">Salutatorian - $200</option>
                            <option value="Honor Roll">Honor Roll - $100</option>
                            <option value="Merit Roll">Merit Roll - $75</option>
                            <option value="Partner">Partner - $50</option>
                            <option value="Academic">Academic - $25</option>
                            <option value="Student">Student - $5</option>
                        </select>
                        <input type="hidden" name="on0" value="Support Level">

                        <button type="submit" class="bg-primary-600 text-white border-0 px-8 md:px-12 py-3 rounded-lg text-base md:text-lg font-semibold cursor-pointer transition-all duration-200 hover:bg-primary-700 hover:-translate-y-0.5 hover:shadow-custom-lg w-full sm:w-auto">
                            Donate with PayPal
                        </button>
                    </div>
                </form>
                <p class="text-sm text-gray-600 italic mt-6">
                    Your contribution directly impacts student success and
                    educational opportunities.
                </p>
            </div>
        </div>
    </div>
</section>
