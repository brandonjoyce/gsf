---
export interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Green Schools Foundation",
    description = "Serving Students Since 1992 - Providing scholarships, classroom grants, and unique opportunities to students and staff in the Green Local School system.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body class="m-0 p-0 bg-white text-gray-900 leading-relaxed font-sans">
        <slot />
    </body>
</html>

<style is:global>
    html {
        scroll-behavior: smooth;
    }
</style>
