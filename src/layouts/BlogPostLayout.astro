---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
    title: string;
    description?: string;
    date: string;
    category?: string;
}

const { title, description, date } = Astro.props;
---

<Layout title={title} description={description}>
    <div id="top"></div>
    <Header />

    <!-- Blog Post Header -->
    <article class="bg-white">
        <header class="bg-gradient-to-br from-primary-500 to-secondary-800 text-white py-20">
            <div class="container mx-auto px-6">
                <div class="max-w-4xl mx-auto">
                    <nav class="flex mb-8" aria-label="Breadcrumb">
                        <ol class="flex items-center space-x-2 text-sm text-white/80">
                            <li>
                                <a href="/" class="hover:text-white font-medium">
                                    Home
                                </a>
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                <a href="/blog" class="hover:text-white font-medium">
                                    Blog
                                </a>
                            </li>
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                                </svg>
                                <span class="text-white/70 font-medium">Current Post</span>
                            </li>
                        </ol>
                    </nav>

                    <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">{title}</h1>

                    {description && (
                        <p class="text-xl text-white/90 leading-relaxed mb-6">
                            {description}
                        </p>
                    )}

                    <div class="flex items-center text-sm text-white/80">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                        </svg>
                        <time datetime={date}>
                            {new Date(date).toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric'
                            })}
                        </time>
                    </div>
                </div>
            </div>
        </header>

        <!-- Blog Post Content -->
        <main class="py-16">
            <div class="container mx-auto px-6">
                <div class="max-w-4xl mx-auto">
                    <div class="prose prose-lg prose-gray max-w-none">
                        <slot />
                    </div>

                    <!-- Share Buttons -->
                    <div class="border-t border-gray-200 pt-8 mt-12">
                        <div class="flex items-center justify-between">
                            <h3 class="text-lg font-semibold text-gray-900">Share this post</h3>
                            <div class="flex space-x-4">
                                <a
                                    href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors text-sm"
                                >
                                    Facebook
                                </a>
                                <a
                                    href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(title)}`}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="bg-gray-800 text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-900 transition-colors text-sm"
                                >
                                    Twitter
                                </a>
                                <a
                                    href={`mailto:?subject=${encodeURIComponent(title)}&body=${encodeURIComponent(`Check out this post from Green Schools Foundation: ${Astro.url.href}`)}`}
                                    class="bg-primary-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors text-sm"
                                >
                                    Email
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Related Links -->
                    <div class="bg-gray-50 rounded-lg p-8 mt-12">
                        <h3 class="text-xl font-bold text-gray-900 mb-6">Explore More</h3>
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <h4 class="font-semibold text-gray-900 mb-3">Learn About Our Programs</h4>
                                <div class="space-y-2">
                                    <a href="/foundation-initiatives" class="block text-primary-600 hover:text-primary-700 text-sm font-medium">
                                        Foundation Initiatives →
                                    </a>
                                    <a href="/scholarships" class="block text-primary-600 hover:text-primary-700 text-sm font-medium">
                                        Scholarships →
                                    </a>
                                    <a href="/academic-class-grants" class="block text-primary-600 hover:text-primary-700 text-sm font-medium">
                                        Academic Classroom Grants →
                                    </a>
                                </div>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-900 mb-3">Get Involved</h4>
                                <div class="space-y-2">
                                    <a href="/membership" class="block text-primary-600 hover:text-primary-700 text-sm font-medium">
                                        Become a Member →
                                    </a>
                                    <a href="/about-gsf" class="block text-primary-600 hover:text-primary-700 text-sm font-medium">
                                        Join Our Board →
                                    </a>
                                    <a href="mailto:greenschoolsfoundation@gmail.com" class="block text-primary-600 hover:text-primary-700 text-sm font-medium">
                                        Contact Us →
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Back to Blog -->
                    <div class="text-center mt-12">
                        <a
                            href="/blog"
                            class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold"
                        >
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
                            </svg>
                            Back to All Posts
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </article>

    <Footer />
</Layout>

<style>
    /* Enhanced prose styles for blog content */
    .prose {
        @apply text-gray-700 leading-relaxed;
    }

    .prose h2 {
        @apply text-2xl font-bold text-primary-600 mt-8 mb-4;
    }

    .prose h3 {
        @apply text-xl font-semibold text-gray-900 mt-6 mb-3;
    }

    .prose h4 {
        @apply text-lg font-medium text-gray-900 mt-4 mb-2;
    }

    .prose p {
        @apply mb-6;
    }

    .prose ul, .prose ol {
        @apply mb-6 pl-6;
    }

    .prose ul li {
        @apply list-disc mb-2;
    }

    .prose ol li {
        @apply list-decimal mb-2;
    }

    .prose a {
        @apply text-primary-600 hover:text-primary-700 underline;
    }

    .prose blockquote {
        @apply border-l-4 border-primary-500 pl-4 italic text-gray-600 my-6;
    }

    .prose img {
        @apply rounded-lg shadow-lg mx-auto my-8;
    }

    .prose strong {
        @apply font-semibold text-gray-900;
    }

    .prose em {
        @apply italic;
    }

    .prose code {
        @apply bg-gray-100 text-gray-800 px-1 py-0.5 rounded text-sm;
    }

    .prose pre {
        @apply bg-gray-800 text-white p-4 rounded-lg overflow-x-auto my-6;
    }

    .prose pre code {
        @apply bg-transparent text-white px-0 py-0;
    }
</style>
