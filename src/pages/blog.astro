---
import ContentLayout from "../layouts/ContentLayout.astro";

// In a real implementation, you would fetch these from a CMS or content collection
const blogPosts = [
    {
        slug: "celebrating-academic-excellence-green-schools-foundation-backs-student-success-in-laws-of-life-essa",
        title: "Celebrating Academic Excellence: Green Schools Foundation Backs Student Success in Laws of Life Essay",
        excerpt: "Green Schools Foundation continues to support student achievement through our Laws of Life essay competition, recognizing outstanding character and values.",
        date: "2024-12-15",
        author: "Green Schools Foundation",
        category: "Student Success"
    },
    {
        slug: "celebrating-collaboration-and-achievement-green-schools-foundation-and-loving-hands-preschool-schol",
        title: "Celebrating Collaboration and Achievement: Green Schools Foundation and Loving Hands Preschool Scholarship",
        excerpt: "Our partnership with Loving Hands Preschool demonstrates the power of community collaboration in supporting educational excellence.",
        date: "2024-11-20",
        author: "Green Schools Foundation",
        category: "Partnerships"
    },
    {
        slug: "green-class-of-2024-graduation",
        title: "Green Class of 2024 Graduation",
        excerpt: "Celebrating the achievements of our graduating seniors and the scholarship recipients who will continue their educational journey.",
        date: "2024-06-15",
        author: "Green Schools Foundation",
        category: "Graduation"
    },
    {
        slug: "honoring-excellence-green-schools-foundation-spotlights-outstanding-educators",
        title: "Honoring Excellence: Green Schools Foundation Spotlights Outstanding Educators",
        excerpt: "Recognizing the dedicated teachers and staff who make a difference in our students' lives through our Staff Spotlight program.",
        date: "2024-05-10",
        author: "Green Schools Foundation",
        category: "Staff Recognition"
    }
];

// Sort posts by date (newest first)
blogPosts.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<ContentLayout
    title="Blog"
    description="Stay up to date with the latest news, updates, and stories from Green Schools Foundation."
    showBreadcrumbs={true}
    breadcrumbs={[
        { name: "Blog", href: "/blog" }
    ]}
>
    <div class="content-section">
        <h2>Latest News & Updates</h2>
        <p>
            Stay connected with the Green Schools Foundation community. Read about our latest initiatives,
            student achievements, educator spotlights, and community partnerships.
        </p>
    </div>

    <div class="space-y-8">
        {blogPosts.map((post) => (
            <article class="bg-white rounded-lg shadow-lg border border-gray-200 overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center text-sm text-gray-500 mb-2">
                        <time datetime={post.date}>
                            {new Date(post.date).toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric'
                            })}
                        </time>
                        <span class="mx-2">•</span>
                        <span class="bg-primary-100 text-primary-800 px-2 py-1 rounded text-xs font-medium">
                            {post.category}
                        </span>
                    </div>

                    <h3 class="text-xl font-bold text-gray-900 mb-3 hover:text-primary-600">
                        <a href={`/post/${post.slug}`} class="block">
                            {post.title}
                        </a>
                    </h3>

                    <p class="text-gray-600 mb-4 leading-relaxed">
                        {post.excerpt}
                    </p>

                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-500">
                            By {post.author}
                        </span>
                        <a
                            href={`/post/${post.slug}`}
                            class="text-primary-600 hover:text-primary-700 font-semibold text-sm"
                        >
                            Read More →
                        </a>
                    </div>
                </div>
            </article>
        ))}
    </div>

    <div class="content-section">
        <h2>Categories</h2>
        <div class="flex flex-wrap gap-2">
            <a href="/blog?category=student-success" class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-primary-200 transition-colors">
                Student Success
            </a>
            <a href="/blog?category=partnerships" class="bg-accent-100 text-accent-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-accent-200 transition-colors">
                Partnerships
            </a>
            <a href="/blog?category=graduation" class="bg-secondary-100 text-secondary-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-secondary-200 transition-colors">
                Graduation
            </a>
            <a href="/blog?category=staff-recognition" class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-green-200 transition-colors">
                Staff Recognition
            </a>
            <a href="/blog?category=scholarships" class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-purple-200 transition-colors">
                Scholarships
            </a>
            <a href="/blog?category=events" class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-orange-200 transition-colors">
                Events
            </a>
        </div>
    </div>

    <div class="highlight-box text-center">
        <h2 class="text-2xl font-bold text-primary-600 mb-4">Stay Connected</h2>
        <p class="mb-6">
            Don't miss out on the latest news and updates from Green Schools Foundation.
            Follow us on social media and subscribe to our newsletter.
        </p>
        <div class="flex justify-center space-x-4">
            <a
                href="https://www.facebook.com/GSFFoundation/"
                target="_blank"
                rel="noopener noreferrer"
                class="bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
            >
                Follow on Facebook
            </a>
            <a
                href="https://www.instagram.com/greenschoolsfoundation/"
                target="_blank"
                rel="noopener noreferrer"
                class="bg-pink-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-pink-700 transition-colors"
            >
                Follow on Instagram
            </a>
            <a
                href="mailto:greenschoolsfoundation@gmail.com"
                class="bg-primary-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
            >
                Subscribe to Newsletter
            </a>
        </div>
    </div>
</ContentLayout>
