    description="Learn about the Green Schools Foundation - a dedicated group of parents, alumni, educators, community leaders, and local business people committed to academic excellence."
    showBreadcrumbs={true}
    breadcrumbs={[
        { name: "About GSF", href: "/about-gsf" }
    ]}
